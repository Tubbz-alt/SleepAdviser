<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.santiagoapps.sleepadviser">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="false" />
    <uses-feature android:name="android.hardware.camera" />

    <permission
        android:name="android.permission.FLASHLIGHT"
        android:permissionGroup="android.permission-group.HARDWARE_CONTROLS"
        android:protectionLevel="normal" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@drawable/dormie_logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/dormie_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">

        <!-- list all activities -->
        <activity
            android:name=".activities.Splashscreen"
            android:label="@string/app_name" />
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.RegisterActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.NavigationMain"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".activities.SleepingActivity" />
        <activity android:name=".activities.CreateRecord" />
        <activity android:name=".activities.MotionSensorActivity" />

        <!-- services -->
        <service
            android:name=".SleepService"
            android:exported="false" />

        <!-- receiver -->
        <receiver android:name=".AlarmNotificationReceiver" />

        <activity android:name=".activities.DormieActivity"></activity>
    </application>

</manifest>