<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slider_bg"
    tools:context=".activities.profile.ProfilingActivity_name">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linear1"
        android:fontFamily="@font/didact_gothic"
        android:padding="10dp"
        android:text="Your information will be used all throughout the app. Please enter your name and your gender"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/logo_dormie_happy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/carrois_gothic_sc"
            android:inputType="number"
            android:text="Hi! Please introduce yourself"
            android:textColor="#fff"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="20dp">

        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:hint="Enter your name here"
            android:textColor="#4e4d4d"
            android:textColorHint="#999999"
            />

    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GENDER"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="24dp"
        android:textColor="#fff"
        android:layout_below="@id/card1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/linear2"
        android:layout_below="@+id/txt1">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/radioGroup"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:id="@+id/rbMale"
                android:layout_height="wrap_content"
                android:text="MALE" />

            <android.support.v7.widget.AppCompatRadioButton
                android:layout_width="wrap_content"
                android:id="@+id/rbFemale"
                android:layout_height="wrap_content"
                android:text="FEMALE" />
        </RadioGroup>

    </LinearLayout>


    <Button
        android:id="@+id/BtnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/linear2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_outline_1"
        android:backgroundTint="@color/app_color"
        android:text="NEXT"
        android:textSize="18dp" />




</RelativeLayout>